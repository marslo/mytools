// Place your key bindings in this file to override the defaultsauto[]
[
  {
    "key": "alt+r",
    "command": "workbench.action.reloadWindow",
    "when": "isDevelopment"
  },
  {
    "key": "cmd+r",
    "command": "-workbench.action.reloadWindow",
    "when": "isDevelopment"
  },
  {
    "key": "shift+cmd+r",
    "command": "code-runner.runByLanguage"
  },
  {
    "key": "ctrl+alt+j",
    "command": "-code-runner.runByLanguage"
  },
  {
    "key": "cmd+r",
    "command": "code-runner.run"
  },
  {
    "key": "ctrl+alt+n",
    "command": "-code-runner.run"
  },
  {
    "key": "shift+alt+r",
    "command": "code-runner.runCustomCommand"
  },
  {
    "key": "ctrl+alt+k",
    "command": "-code-runner.runCustomCommand"
  },
  {
    "key": "shift+alt+s",
    "command": "code-runner.stop"
  },
  {
    "key": "ctrl+alt+m",
    "command": "-code-runner.stop"
  },
  {
    "key": "shift+alt+c",
    "command": "workbench.output.action.clearOutput"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  // terminal maximize/restore
  {
    "key": "shift+cmd+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "panelFocus"
  },

  // editor maximize/restore
  {
    "key": "shift+cmd+m",
    "command": "workbench.action.closePanel",
    "when": "editorTextFocus && panelVisible"
  },
  // multi-command to open terminal panel and focus back to editor - to fix the focus issue
  {
    "key": "shift+cmd+m",
    "command": "extension.multiCommand.execute",
    "args": { "command": "openPanelAndFocusEditor" },
    "when": "editorTextFocus && !panelVisible"
  },
  {
    "key": "ctrl+shift+l",
    "command": "editor.action.inlineSuggest.acceptNextWord",
    "when": "cursorBeforeGhostText && inlineSuggestionVisible && !accessibilityModeEnabled && !editorReadonly"
  },
  {
    "key": "cmd+right",
    "command": "-editor.action.inlineSuggest.acceptNextWord",
    "when": "cursorBeforeGhostText && inlineSuggestionVisible && !accessibilityModeEnabled && !editorReadonly"
  },
  {
    "key": "ctrl+alt+l",
    "command": "editor.action.inlineSuggest.acceptNextLine"
  }
]
